<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:paddingHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="64dp"
        app:cardBackgroundColor="#DAD8D8"
        app:cardCornerRadius="16dp"
        android:elevation="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/item_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Tipo"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/item_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.5"
                    android:text="Categoria"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:paddingEnd="32dp"

                android:text="fecha del pago"/>
           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/item_cantidad"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cantidad de dinero"
               android:paddingEnd="16dp"
               android:paddingTop="8dp"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="8dp"
               android:textAppearance="?attr/textAppearanceHeadline6"
               android:textAlignment="center"
               />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>